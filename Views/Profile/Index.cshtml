@using Microsoft.AspNetCore.Components.Forms
@model IEnumerable<ProfileViewModel>

<div>
    <h1>Hello, World. This is Profile Page</h1>

    <div>
        <button id="add_user" class="btn btn-primary">Add new User</button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Age</th>
                <th scope="col">Country</th>
                <th scope="col">City</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>@Convert.ToDateTime(user.DOB).ToDateOnlyString()</td>
                    <td>@user.Age</td>
                    <td>@user.Country</td>
                    <td>@user.City</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="EditUser" asp-controller="Profile" asp-route-id="@user.ID">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="add_user_form">
        <header class="add_userHeader">
            <h3>Add User</h3>

            <button id="add_user_cancel" class="btn btn-outline-secondary">Close</button>
        </header>

        <main class="add_userMain">
            <form method="post" asp-controller="Profile" asp-action="AddUser">
                <div>
                    <div>
                        <label for="firstname">Firstname</label>
                        <input type="text" name="firstname" required id="firstname" />
                    </div>

                    <div>
                        <label for="lastname">Lastname</label>
                        <input type="text" name="lastname" required id="lastname" />
                    </div>
                </div>

                <div>
                    <div>
                        <label for="dob">Date of Birth</label>
                        <input type="date" name="dob" id="dob" required />
                    </div>

                    <div>
                        <label for="age">Age</label>
                        <input type="number" name="age" id="age" required />
                    </div>
                </div>

                <div>
                    <div>
                        <label for="country">Country</label>
                        <input name="country" type="text" id="country" required />
                    </div>

                    <div>
                        <label for="city">City</label>
                        <input type="text" name="city" id="city" required />
                    </div>
                </div>

                <div>
                    <button class="btn btn-primary">Save User</button>
                </div>
            </form>
        </main>
    </div>

    <div class="background-overlay"></div>
</div>

